
@{
    ViewBag.Title = "Product";
    var b = ViewBag.Product;
    var c = 0;
    var ab = ViewBag.IsUser;
}

<div>
    <h3>@b.Name</h3>
    @if (ab)
    {
        using (Html.BeginForm("FileUpload", "Category", FormMethod.Post,
                                                             new { enctype = "multipart/form-data" }))
        {
            <label for="file">Upload Image:</label>
            @Html.Hidden("Id", (int)b.Id);
            <input type="file" name="file" id="file" style="width: 100%;" />
            <input type="submit" value="Upload" class="submit" />
        }
    }
    <table>
        <tr>
            <td id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5000" style="width:40%">

                <!-- Wrapper for slides -->
                <div class="carousel-inner">

                    @foreach (var a in b.Images)
                    {
                        if (c == 0)
                        {
                            <div class="item active">
                                <img src="@a.ImagePath" />
                            </div>
                        }
                        else
                        {
                            <div class="item">
                                <img src="@a.ImagePath" />
                            </div>
                        }
                        c++;
                    }
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </td>
            <td class="text-center">@b.Description</td>
        </tr>
    </table>


</div>

